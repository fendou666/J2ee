	static {

	}

	private JdbcStore() {

	}

	private void initInfo(){
		Properties pro = new Properties();
		InputStream rs = this.getClass().getResourceAsStream("jdbcConf.properties");
		try {
			pro.load(rs);
			this.driverPath = pro.getProperty("driver", "oracle.jdbc.OracleDriver");
			this.url =  pro.getProperty("url", "jdbc:oracle:thin:@localhost:1521:orcl");
			this.name = pro.getProperty("name", "scott");
